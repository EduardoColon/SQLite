<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gt.nose.practica.vista.Menu">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:background="@color/colorAccent"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:text="Guardar tarea"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_24sdp"
            android:id="@+id/tvGuardar"
            android:textStyle="bold"
            />


        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/elGuardar"
            app:ael_duration="1000"
            app:ael_interpolator="bounce"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:hint="Ingrese la tarea asignada al dia"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:id="@+id/bGuardar"
                android:layout_marginTop="@dimen/_19sdp"
                android:textSize="@dimen/_19sdp"/>



        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        <TextView
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/colorAccent"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:text="Consultar tareas"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_24sdp"
            android:id="@+id/tvConsultar"
            android:textStyle="bold"
            />

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/elConsultar"
            app:ael_duration="1000"
            app:ael_interpolator="bounce"
            android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar"
            android:id="@+id/bConsultar"
            android:layout_marginTop="@dimen/_9sdp"
            android:textSize="@dimen/_19sdp"/>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        <TextView
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/colorAccent"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:text="Modificar tarea"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_24sdp"
            android:id="@+id/tvModificar"
            android:textStyle="bold"
            />

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/elModificar"
            app:ael_duration="1000"
            app:ael_interpolator="bounce"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etIdModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:inputType="number"
                android:hint="Ingrese el id de la tarea a modificar"
                />

            <EditText
                android:id="@+id/etTareaModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:hint="Ingrese la nueva tarea"
                />


            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:id="@+id/bModificar"
            android:layout_marginTop="@dimen/_9sdp"
            android:textSize="@dimen/_19sdp"/>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        <TextView
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/colorAccent"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:text="Eliminar tarea"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_24sdp"
            android:id="@+id/tvEliminar"
            android:textStyle="bold"
            />

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/elEliminar"
            app:ael_duration="1000"
            app:ael_interpolator="bounce"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etIdEliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:inputType="number"
                android:hint="Ingrese el id de la tarea a eliminar"
                />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:id="@+id/bEliminar"
            android:layout_marginTop="@dimen/_9sdp"
            android:textSize="@dimen/_19sdp"/>
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
